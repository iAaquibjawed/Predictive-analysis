# Application Settings
ENVIRONMENT=development
DEBUG=true
APP_NAME=CDSS ML Service
APP_VERSION=1.0.0

# Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8001

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:8000"]

# JWT Settings
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Settings
DATABASE_URL=postgresql://ml_user:ml_password@localhost:5432/ml_database
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# ML Model Paths
MODEL_PATH=./models
SYMPTOM_MODEL_PATH=./models/symptom_analyzer
DRUG_INTERACTION_MODEL_PATH=./models/drug_interaction
FORECASTING_MODEL_PATH=./models/forecasting

# External API Keys
OPENAI_API_KEY=your_openai_api_key_here
PUBMED_API_KEY=your_pubmed_api_key_here
DRUGBANK_API_KEY=your_drugbank_api_key_here
NHS_API_KEY=your_nhs_api_key_here

# MLflow Settings
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=cdss_ml_models

# Prometheus Settings
PROMETHEUS_PORT=9090
PROMETHEUS_ENABLED=true

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Security Settings
ML_API_TOKEN=your_ml_api_token_here
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600

# Drug Data Sources
DRUGBANK_URL=https://go.drugbank.com
SIDER_URL=http://sideeffects.embl.de
RXNORM_URL=https://www.nlm.nih.gov/research/umls/rxnorm
NICE_GUIDELINES_URL=https://www.nice.org.uk

# NHS Data Sources
NHS_PRESCRIBING_URL=https://openprescribing.net
NHS_SCM_URL=https://www.england.nhs.uk
NHS_DIGITAL_URL=https://digital.nhs.uk

# Monitoring Settings
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here
NEW_RELIC_APP_NAME=CDSS ML Service

# Development Settings
RELOAD_ON_CHANGE=true
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true

